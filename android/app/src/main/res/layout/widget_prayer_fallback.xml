<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#1E1E1E">

    <TextView
        android:id="@+id/widget_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lokasi tidak tersedia"
        android:textColor="#FFFFFFFF"
        android:textStyle="bold"
        android:textSize="14sp"
        android:padding="6dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="6dp">
        <TextView
            android:id="@+id/widget_subuh_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="#FFFFFFFF" />
        <TextView
            android:id="@+id/widget_zuhur_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="#FFFFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp">
        <TextView
            android:id="@+id/widget_ashar_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="#FFFFFFFF" />
        <TextView
            android:id="@+id/widget_magrib_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="#FFFFFFFF" />
    </LinearLayout>

    <TextView
        android:id="@+id/widget_isya_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="#FFFFFFFF"
        android:paddingTop="6dp" />

    <TextView
        android:id="@+id/widget_next_prayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selanjutnya: -"
        android:textColor="#FFCCCCCC"
        android:paddingTop="6dp" />

    <TextView
        android:id="@+id/widget_next_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="#FFCCCCCC"
        android:paddingBottom="6dp" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/widget_bg">

    <TextView
        android:id="@+id/widget_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lokasi"
        android:textColor="#FFFFFFFF"
        android:textStyle="bold"
        android:textSize="13sp"
        android:paddingBottom="6dp" />

    <TextView
        android:id="@+id/widget_countdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textColor="#FFFFFFFF"
        android:textSize="28sp"
        android:gravity="center"
        android:background="#FF2CB6AD"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">
            <TextView
                android:id="@+id/widget_subuh_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Subuh"
                android:textColor="#FFEEEEEE"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/widget_subuh_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="#FFFFFFFF"
                android:textSize="13sp" />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#20FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">
            <TextView
                android:id="@+id/widget_zuhur_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Dzuhur"
                android:textColor="#FFEEEEEE"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/widget_zuhur_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="#FFFFFFFF"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
